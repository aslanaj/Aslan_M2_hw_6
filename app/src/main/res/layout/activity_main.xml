<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg_style"
    android:fitsSystemWindows="true"
    >

    <TextView
        android:id="@+id/text_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_enter"
        android:layout_marginTop="200dp"/>
    <TextView
        android:id="@+id/text_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Выполните вход или зарегестрируйтесь"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_welcome"
        android:layout_marginTop="10dp" />


        <EditText
            android:id="@+id/edittext_login"
            android:background="@drawable/bg_edit_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:hint="Введите вашу почту"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/text_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="80dp"/>

        <EditText
            android:id="@+id/edittext_password"
            android:background="@drawable/bg_edit_text"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:hint="Введите пароль"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/edittext_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edittext_password"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_enter"
            android:layout_width="300dp"
            android:layout_height="55dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="15dp"
            android:backgroundTint="@color/gray"
            android:text="Войти"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Забыл пароль?"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/button_enter"
            app:layout_constraintStart_toStartOf="@id/button_enter"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нажмите сюда"
            android:textColor="@color/orange"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/button_enter"
            app:layout_constraintStart_toStartOf="@id/button_enter"
            app:layout_constraintEnd_toEndOf="@id/button_enter"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>